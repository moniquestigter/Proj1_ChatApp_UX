<div class ="row">
	<div class ="col-md-6 col-md-offset-3">
		<h3 style="color:#599487; font-size:35px; font-family:'Trebuchet MS', 'Times', 'serif'; text-align: center; font-style: oblique;">Hablando con: <strong><%= @chat.with(current_user).name %></strong></h3>
		<br></br>

		<div id="chat-main">

		  <div id="chat-body">
		    <%= render @chat.mensajes %>
		  </div>

		  <%= form_for @mensaje do |f| %>
		    <%= hidden_field_tag 'chat_id', @chat.id %>
		    <%= f.label " " %>
	
		    <%= f.text_area :body %>
		    </div>
		    <br></br>
		    <div style= "font-size: 15px; font-family:'Trebuchet MS', 'Times', 'serif';" class= "col-md-4 col-md-offset-3">
		    <%= f.submit "Enviar"%>
		    </div>
		  <% end %>
		</div>
</div>
	</div>